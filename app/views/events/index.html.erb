<div class= "container-buddies container"  data-controller="cards">
  <div class= "text-center">
    <h1>The buddy you chose</h1>
    <p>You decided to choose :</p>
  </div>
  <div class="all-cards-buddies">
    <% @buddies.each do |buddy| %>
        <div class="card-buddy">
          <%= image_tag("buddies/photo_lucas.jpeg") %>
          <div class="card-buddy-infos">
           <h2><%= buddy.user.name %></h2>
            <div class="d-none">
              <p><%= buddy.description %></p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
