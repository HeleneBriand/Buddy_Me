<div class="container mt-4">
  <br>

  <div class="row">
    <div class="col-6 m-auto">
      <div class="buddy-form">
          <h1>Update your profile !</h1>
        <br>
          <div class="class mt-3">
            <%= simple_form_for @buddy do |f| %>
              <%= f.input :description %>
              <%= f.input :category, collection: Buddy::CATEGORY %>
              <%= f.input :city %>
              <%= f.input :photo, as: :file %> <br>
              <%= f.button :submit  %>

            <% end %>
            <br>
          </div>
      </div>
    </div>
  </div>

</div>
