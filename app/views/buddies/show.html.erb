

<div class="container-show">
  <div class="profile grow">
    <div class="center-image">
        <div class="image">
          <%= cl_image_tag(@buddy.user.photo.key,:width => 300, :height => 300, :crop => :fill) %>
        </div>
        <div class="name">
          <h2><%= @buddy.user.name %></h2>
        </div>
        <div class="age">
          <p><strong><%= @buddy.user.age %></strong> years old</p>
        </div>
        <div class="category">
         <p>Available for <strong><%= @buddy.category %></strong> events !</p>
        </div>
        <div class="description">
          <p>"<%= @buddy.description %>!"</p>
        </div>
        <div class="city">
         <p>📍<strong><%= @buddy.city %></strong></p>
        </div>
        <div id='buddy-event-dates' data-unavailable="<%= @buddy.unavailable_dates.to_json %>">
          <% if current_user.id != @buddy.user_id  %>
            <%= simple_form_for([@buddy, @event]) do |f| %>
            <%= f.input :start_date, as: :string, type: :text %>
            <%= f.submit "Have fun with #{@buddy.user.name}", class: "btn-back" %>
            <% end %>
          <% end %>
        </div>
        <div class="buttons">
          <div class="btn-back">
            <%= link_to "Back to list", buddies_path, class: "btn-back" %>
          </div>
        </div>
    </div>
  </div>
</div>
